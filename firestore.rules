rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura en la colección de usuarios
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Permitir lectura y escritura en la colección de videos
    match /videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    
    // Permitir lectura y escritura en la colección de comentarios
    match /videos/{videoId}/comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
